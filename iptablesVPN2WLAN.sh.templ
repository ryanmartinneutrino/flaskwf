#! /bin/bash

sudo iptables -F
sudo iptables -A INPUT -i {{*iface_eth*}} -j ACCEPT
sudo iptables -A OUTPUT -o {{*iface_eth*}} -j ACCEPT

sudo iptables -t nat -A POSTROUTING -o tun0 -j MASQUERADE
sudo iptables -A FORWARD -i tun0 -o {{*iface*}} -m state --state RELATED,ESTABLISHED -j ACCEPT
sudo iptables -A FORWARD -i {{*iface*}} -o tun0 -j ACCEPT

